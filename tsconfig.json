{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "outDir": "lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "filesGlob": [
        "src/**/*.{ts, d.ts}"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}
